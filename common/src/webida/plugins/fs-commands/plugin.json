                                     "id": "delimiter",
                                     "name": "---"
                                 },
                                 {
                                     "id": "new-file",
                                     "name": "&File",
                                     "commandId": "new-file",
                                     "update": "true",
                                     "toolbar": {
                                         "icons" : "<%= themePath %>/images/icons/toolbar_file.png",
                                         "tooltip" : "New File"
