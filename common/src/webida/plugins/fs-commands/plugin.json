                 },
                 {
                     "id": "open-with",
                     "name": "Open with",
                     "location": "/",
                     "type": "context-menu",
                     "items": [
                         {
                             "id": "open-with-code-editor",
                             "name": "Code Editor",
                             "commandId": "open-with-code-editor",
                             "update": "true"
                         }
                     ]
                 },
                 {
                     "id": "delimiter",
                     "name": "---",
                     "location": "/",
                     "type": "context-menu"
                 },
                 {
                     "id": "new",
                     "name": "New",
                     "location": "/",
                     "type": "context-menu",
                     "items": [
                         {
                             "id": "delimiter",
                             "name": "---"
                         },
                         {
                             "id": "new-file",
                             "name": "&File",
                             "commandId": "new-file",
                             "update": "true"
                         },
                         {
                             "id": "new-directory",
                             "name": "&Directory",
                             "commandId": "new-directory",
                             "update": "true"
                         }
                     ]
                 },
                 {
                     "id": "duplicate",
                     "name": "Dup&licate",
                     "commandId": "duplicate",
