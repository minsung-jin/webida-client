                         },
                         {
                             "id": "upload-files",
                             "name": "&Upload Files",
                             "commandId": "upload-files",
                             "invisible": "true"
                         },
                         {
                             "id": "download-files",
                             "name": "&Download Files",
                             "commandId": "download-files"
                         }
                     ]
                 },
                 {
                     "id": "delimiter",
                     "name": "---",
                     "location": "/find/",
                     "type": "top-menu"
                 },
                 {
                     "id": "find-in-files",
                     "name": "&Find in Files",
                     "commandId": "find-in-files",
                     "location": "/find/",
                     "type": "top-menu",
                     "update": "true",
                     "toolbar": {
                         "icons" : "<%= themePath %>/images/icons/toolbar_findfiles.png",
                         "tooltip" : "Find in Files"
                     }
                 },
                 {
                     "id": "go-to-file",
                     "name": "Go to &File",
                     "commandId": "go-to-file",
                     "location": "/navigate/go-to-definition?before",
                     "type": "top-menu",
                     "update": "true",
                     "toolbar": {
                         "icons" : "<%= themePath %>/images/icons/toolbar_gotofile.png",
                         "tooltip" : "Go to File"
                     }
                 },
