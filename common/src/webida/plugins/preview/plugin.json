{
    "name": "webida.common.preview",
    "description": "Preview",
    "version": "0.1.0",
    "requirement": "webida.common.workspace",
    "extensions": {
        "webida.common.workbench:views" : {
            "module" : "webida-lib/plugins/preview/preview-view",
            "location": "bottom"
        },

        "webida.preference:pages": [
            {
                "module": "webida-lib/plugins/preview/preview-pref-page",
                "id": "preview",
                "hierarchy": "",
                "name": "Preview",
                "getDefault": "getDefault",
                "page": "SimplePage",
                "pageData": "getSchema",
                "scope": ["WORKSPACE"]
            }
        ],

        "webida.common.workspace:menu" : {
            "location" : "/",
            "module" : "webida-lib/plugins/preview/preview-menu-item",
            "wholeItems" : {
                "Preview" : [ "cmnd" ]
            },
            "getViableItems" : "getViableItemsForWorkspaceView"
        },

        "webida.common.command-system:commands": {
            "commands": [
                {
                    "id": "preview"
                }
            ]
        },

        "webida.common.command-system:menus": {
            "items": [
                {
                    "id": "preview",
                    "name": "Preview",
                    "commandId": "preview",
                    "location": "/",
                    "type": "context-menu",
                    "update": "true"
                }
            ]
        }
    }
}

