                     "update": "true"
                 },
                 {
                     "id": "rename",
                     "name": "Ren&ame",
                     "commandId": "rename",
                     "location": "/",
                     "type": "context-menu",
                     "update": "true"
                 },
                 {
                     "id": "find-in-files-delimiter",
                     "name": "---",
                     "location": "/",
                     "type": "context-menu",
                     "update": "true"
                 },
                 {
                     "id": "find-in-files",
                     "name": "&Find in Files",
                     "commandId": "find-in-files",
